{
  "name": "tsconfig-extends",
  "version": "1.0.1",
  "description": "load tsconfig compiler-options, support `extends` field",
  "keywords": [
    "compiler-options",
    "extends",
    "tsconfig",
    "typescript"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/tsconfig-extends",
  "homepage": "https://github.com/ikatyang/tsconfig-extends#readme",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run build",
    "test": "jest -c ./jest.json",
    "lint": "tslint -p ./tsconfig.json --type-check",
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p tsconfig.build.json"
  },
  "devDependencies": {
    "@types/jest": "20.0.5",
    "@types/node": "8.0.18",
    "codecov": "2.2.0",
    "jest": "20.0.4",
    "prettier": "1.5.3",
    "prettier-config-ikatyang": "1.1.1",
    "ts-jest": "20.0.7",
    "tslint": "5.5.0",
    "tslint-config-ikatyang": "2.1.0",
    "tslint-config-prettier-ext": "1.3.0",
    "tslint-plugin-prettier": "1.0.0",
    "typescript": "2.4.2"
  },
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "/lib/**/*"
  ]
}
